<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}VAT CALCULATOR{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('css/app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}
        {% endblock %}
    </head>
    <body>
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <div class="container">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a href="{{ path('app_calculate') }}" class="nav-link {% if app.request.get('_route') in ['app_calculate', 'app_show_calculation_item'] %}active{% endif %}">VAT calculator</a></li>
                    <li class="nav-item"><a href="{{ path('app_show_calculation_history') }}" class="nav-link {% if app.request.get('_route') == 'app_show_calculation_history' %}active{% endif %}">Calculation history</a></li>
                </ul>
            </div>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
